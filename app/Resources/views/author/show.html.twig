{% extends 'base.html.twig' %}

{% block body %}
    <h1>Author</h1>

    <table class="table table-list">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ author.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="list-inline">
        <li>
            <a href="{{ path('author_index') }}" class="btn btn-primary">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('author_edit', { 'id': author.id }) }}" class="btn btn-info">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Supprimer ?')">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
